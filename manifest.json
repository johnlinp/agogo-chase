{
    "name": "Agogo Chase",
    "description": "If you like Agogo Lin, then you cannot miss this.",
    "manifest_version": 2,
    "version": "1.0",
    "homepage_url": "https://github.com/johnlinp/agogo-chase",
    "icons": {
        "48": "icons/agogochase-48.png"
    },
    "applications": {
        "gecko": {
            "id": "agogochase@johnlin.tw",
            "strict_min_version": "45.0.0"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["css/agogochase.css"],
            "js": ["js/agogochase.js"]
        }
    ]
}
